@import 'compass/css3';
@import 'compass/typography/text/ellipsis';
@import 'compass/css3/user-interface';
@import 'compass/css3/border-radius';
@import './colors';
@import './sizes';

html,
body
{
  /*overflow-x: hidden;*/
  background-color: $workships-white;
  font-family: 'Lato', sans-serif;
  font-size: 11pt;
  height: 100%;
  line-height: 18px;
  margin: 0  !important;
  position: absolute;
  -webkit-user-select: none;
     -moz-user-select: none;
      -ms-user-select: none;
          user-select: none;
  width: 100% ;
}
.modalOverflow {
  overflow: hidden;
}
.over-hide {
  overflow-x: hidden; 
}
img
{
  -webkit-user-drag: none;
  height: 100%;
  width: 100%;
}

::-webkit-input-placeholder
{
  color: #8b91a0;
  font-size: 10pt;
  font-style: italic;
  font-weight: bold;
}

.workships-canvas
{
  .left-sidebar-background
  {
    background-color: $workships-grey;
    bottom: 0;
    left: 0;
    position: static;
    top: 70px;
    width: $workships-left-sidebar-width;
  }
  .content-wrapper
  {
    float: left;
    margin-top: -34px;
    position: relative;
    width: 100%;
    .main-view-right
    {
      background-color: white;
      height: 100%;
      position: relative;
      .view-content
      {
        background-color: white;
        position: relative;
      }
    }
    .main-view-right-expand
    {
      margin-left: 0;
    }
    .main-view-right-minimized
    {
      margin-left: $workships-left-sidebar-width;
    }
  }
  .left-sidebar-visability-button
  {
    height: 30px;
    left: $workships-left-sidebar-width - 14px;
    position: relative;
    top: 75px;
    width: 18px;
    z-index: 1000;
  }
  .left-sidebar-visability-button-minimized
  {
    left: 0;
  }
}

.clickable
{
  cursor: pointer;
}

.arrow
{
  border-left: 7px solid transparent;
  border-right: 7px solid transparent;
  height: 0;
  width: 0;
}
.arrow-up
{
  border-bottom: 8px solid green;
}
.arrow-down
{
  border-top: 8px solid red;
}

.recatngle-img
{
  height: 20px;
  width: 20px;
}

.rotate-180
{
  transform: rotate(180deg);
}
